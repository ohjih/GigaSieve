---
import '../styles/global.css';

interface Props {
    title?: string;
    description?: string;
}

import { SITE_CONFIG } from '../site.config';
import { getLangFromUrl, useTranslations, languages, defaultLang, buildLangPath } from '../i18n/utils';

const {
    title = "GigaSieve - Analyze Huge Files Locally",
    description = "Open and analyze 1-10GB files in your browser. No upload, 100% local processing."
} = Astro.props;

const adsenseClient = SITE_CONFIG.adsenseClientId?.trim();
const adsenseAccountMeta = SITE_CONFIG.adsenseAccountMeta?.trim();
const googleSiteVerification = SITE_CONFIG.googleSiteVerification?.trim();
const hasAdsenseClient = !!adsenseClient && /^ca-pub-\d{16}$/.test(adsenseClient);
const hasAdsenseAccountMeta = !!adsenseAccountMeta && /^ca-pub-\d{16}$/.test(adsenseAccountMeta);
const hasGoogleSiteVerification = !!googleSiteVerification;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const supportedLangs = Object.keys(languages);
const siteUrl = (import.meta.env.PUBLIC_SITE_URL ?? Astro.url.origin).replace(/\/+$/, '');
const rawPath = Astro.url.pathname;
const pathWithoutLang = lang !== defaultLang && rawPath.startsWith(`/${lang}`)
    ? rawPath.slice(lang.length + 1) || '/'
    : rawPath;
const cleanPath = pathWithoutLang === '' ? '/' : pathWithoutLang;
const canonicalPath = lang === defaultLang ? cleanPath : rawPath;

const hreflangs = supportedLangs.map((l) => {
    const href = l === defaultLang
        ? `${siteUrl}${cleanPath}`
        : `${siteUrl}/${l}${cleanPath === '/' ? '/' : cleanPath}`;
    return { lang: l, href };
});
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
        <link rel="canonical" href={`${siteUrl}${canonicalPath}`} />
        {hreflangs.map((link) => (
            <link rel="alternate" hreflang={link.lang} href={link.href} />
        ))}
        <link rel="alternate" hreflang="x-default" href={`${siteUrl}${cleanPath}`} />
        {hasGoogleSiteVerification && (
            <meta name="google-site-verification" content={googleSiteVerification} />
        )}
        {hasAdsenseAccountMeta && (
            <meta name="google-adsense-account" content={adsenseAccountMeta} />
        )}
        {hasAdsenseClient && (
            <script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`} crossorigin="anonymous"></script>
        )}
    </head>
    <body class="min-h-screen flex flex-col bg-slate-950 text-slate-100 font-['Inter',sans-serif] antialiased">
        <header class="sticky top-0 z-50 bg-slate-900/80 backdrop-blur-md border-b border-slate-800">
            <div class="container mx-auto px-4 h-16 flex items-center justify-between">
                <a href={buildLangPath('/', lang)} class="flex items-center gap-2 font-extrabold text-xl tracking-tight">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-white shadow-lg shadow-emerald-500/30">
                        G
                    </div>
                    <span class="bg-gradient-to-r from-emerald-400 to-cyan-400 bg-clip-text text-transparent">GigaSieve</span>
                </a>
                <nav class="flex items-center gap-1 md:gap-4 text-sm font-semibold text-slate-400">
                    <a href={buildLangPath('/app', lang)} class="px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">{t('nav.app')}</a>
                    <a href={buildLangPath('/recipes', lang)} class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">{t('nav.recipes')}</a>
                    <a href={buildLangPath('/guides', lang)} class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">{t('nav.guides')}</a>
                    <a href={buildLangPath('/privacy', lang)} class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">{t('nav.privacy')}</a>
                    <div class="relative hidden sm:block group">
                        <button class="px-3 py-2 rounded-full bg-slate-800 text-slate-300 text-xs font-semibold group-hover:bg-slate-700">
                            {languages[lang]}
                        </button>
                        <div class="absolute right-0 top-full pt-2 w-28 hidden group-hover:block z-50">
                            <div class="rounded-xl bg-slate-900 border border-slate-800 shadow-lg overflow-hidden">
                                {supportedLangs.map((l) => (
                                    <a
                                        href={buildLangPath(cleanPath, l)}
                                        data-lang-switch={l}
                                        class={`block px-3 py-2 text-xs hover:bg-slate-800 ${l === lang ? 'text-emerald-300' : 'text-slate-300'}`}
                                    >
                                        {languages[l]}
                                    </a>
                                ))}
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <main class="flex-1">
            <slot />
        </main>

        <footer class="border-t border-slate-800 bg-slate-900/50 py-12 mt-20">
            <div class="container mx-auto px-4 text-center">
                <div class="flex justify-center gap-8 mb-8 text-sm font-medium text-slate-500">
                    <a href={buildLangPath('/about', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.about')}</a>
                    <a href={buildLangPath('/contact', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.contact')}</a>
                    <a href={buildLangPath('/privacy', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.privacy')}</a>
                    <a href={buildLangPath('/terms', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.terms')}</a>
                    <a href={buildLangPath('/guides', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.guides')}</a>
                    <a href={buildLangPath('/recipes', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.recipes')}</a>
                    <a href={buildLangPath('/changelog', lang)} class="hover:text-emerald-400 transition-colors">{t('footer.changelog')}</a>
                </div>
                <p class="text-slate-600 text-sm">{t('footer.copyright').replace('{year}', String(new Date().getFullYear()))}</p>

                <p class="text-slate-700 text-xs mt-2">{t('footer.note')}</p>
            </div>
        </footer>
        <script is:inline define:vars={{ supportedLangs, defaultLang }}>
            const preferred = localStorage.getItem('preferred_lang');
            const browserLang = (navigator.languages && navigator.languages.length ? navigator.languages[0] : navigator.language) || '';
            const detected = (preferred || browserLang || '').slice(0, 2);
            const path = window.location.pathname;
            const hasLangPrefix = supportedLangs.some((l) => path.startsWith(`/${l}/`) || path === `/${l}`);
            if (path === '/' && !hasLangPrefix && detected && detected !== defaultLang && supportedLangs.includes(detected)) {
                window.location.replace(`/${detected}/`);
            }
            document.querySelectorAll('[data-lang-switch]').forEach((el) => {
                el.addEventListener('click', () => {
                    const lang = el.getAttribute('data-lang-switch');
                    if (lang) localStorage.setItem('preferred_lang', lang);
                });
            });
        </script>
    </body>
</html>
