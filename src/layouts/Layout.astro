---
import '../styles/global.css';

interface Props {
    title?: string;
    description?: string;
}

import { SITE_CONFIG } from '../site.config';

const {
    title = "GigaSieve - Analyze Huge Files Locally",
    description = "Open and analyze 1-10GB files in your browser. No upload, 100% local processing."
} = Astro.props;

const adsenseClient = SITE_CONFIG.adsenseClientId?.trim();
const adsenseAccountMeta = SITE_CONFIG.adsenseAccountMeta?.trim();
const googleSiteVerification = SITE_CONFIG.googleSiteVerification?.trim();
const hasAdsenseClient = !!adsenseClient && /^ca-pub-\d{16}$/.test(adsenseClient);
const hasAdsenseAccountMeta = !!adsenseAccountMeta && /^ca-pub-\d{16}$/.test(adsenseAccountMeta);
const hasGoogleSiteVerification = !!googleSiteVerification;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
        {hasGoogleSiteVerification && (
            <meta name="google-site-verification" content={googleSiteVerification} />
        )}
        {hasAdsenseAccountMeta && (
            <meta name="google-adsense-account" content={adsenseAccountMeta} />
        )}
        {hasAdsenseClient && (
            <script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`} crossorigin="anonymous"></script>
        )}
    </head>
    <body class="min-h-screen flex flex-col bg-slate-950 text-slate-100 font-['Inter',sans-serif] antialiased">
        <header class="sticky top-0 z-50 bg-slate-900/80 backdrop-blur-md border-b border-slate-800">
            <div class="container mx-auto px-4 h-16 flex items-center justify-between">
                <a href="/" class="flex items-center gap-2 font-extrabold text-xl tracking-tight">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-white shadow-lg shadow-emerald-500/30">
                        G
                    </div>
                    <span class="bg-gradient-to-r from-emerald-400 to-cyan-400 bg-clip-text text-transparent">GigaSieve</span>
                </a>
                <nav class="flex gap-1 md:gap-4 text-sm font-semibold text-slate-400">
                    <a href="/app" class="px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">App</a>
                    <a href="/recipes" class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">Recipes</a>
                    <a href="/guides" class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">Guides</a>
                    <a href="/privacy" class="hidden md:block px-4 py-2 rounded-full hover:bg-slate-800 transition-all hover:text-emerald-400">Privacy</a>
                </nav>
            </div>
        </header>

        <main class="flex-1">
            <slot />
        </main>

        <footer class="border-t border-slate-800 bg-slate-900/50 py-12 mt-20">
            <div class="container mx-auto px-4 text-center">
                <div class="flex justify-center gap-8 mb-8 text-sm font-medium text-slate-500">
                    <a href="/about" class="hover:text-emerald-400 transition-colors">About</a>
                    <a href="/contact" class="hover:text-emerald-400 transition-colors">Contact</a>
                    <a href="/privacy" class="hover:text-emerald-400 transition-colors">Privacy</a>
                    <a href="/terms" class="hover:text-emerald-400 transition-colors">Terms</a>
                    <a href="/guides" class="hover:text-emerald-400 transition-colors">Guides</a>
                    <a href="/recipes" class="hover:text-emerald-400 transition-colors">Recipes</a>
                </div>
                <p class="text-slate-600 text-sm">(c) {new Date().getFullYear()} GigaSieve. All files processed locally.</p>

                <p class="text-slate-700 text-xs mt-2">No upload. No tracking. Your data stays on your device.</p>
            </div>
        </footer>
    </body>
</html>
