---
import Layout from '../layouts/Layout.astro';
import GigaSieveApp from '../components/GigaSieveApp';
---

<Layout title="GigaSieve App - Analyze Files">
    <section class="container mx-auto px-4 py-6">
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-slate-200">GigaSieve</h1>
                <p class="text-slate-500 text-sm">Streaming analysis for huge files. No upload.</p>
            </div>
            <div class="flex gap-2 text-xs">
                <span class="bg-emerald-500/20 text-emerald-400 px-2 py-1 rounded">Local-only</span>
                <span class="bg-cyan-500/20 text-cyan-400 px-2 py-1 rounded">Streaming</span>
            </div>
        </div>
        <GigaSieveApp client:only="react" />
    </section>
</Layout>
